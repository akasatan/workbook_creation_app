<div class="row m-2">
  <div>
    <%= link_to @workbook.name, user_path(current_user) %>
    <i class="fas fa-chevron-right"></i>
    <i class="far fa-edit">項目を編集</i>
  </div>
</div>
<%= form_with model: @workbook_item, local: true do |f| %>
<div class="row justify-content-center my-2">
  <%= f.hidden_field :workbook_id, value: @workbook.id %>
</div>
  <%= @workbook_item.quiz_type %>ジャンルの名前を編集しています。
<div class="row justify-content-center my-2">
  <%= f.label :name, "この項目の名前" %>
</div>
  <%= f.text_area :name, rows: 5, class: "form-control" %>
<div class="row justify-content-center my-2">
  <%= f.submit "変更する", class: "btn btn-info col-4 my-5" %>
</div>
<% end %>