<div class="row mr-auto">
  <div>
    <%= link_to @workbook_item.workbook.name, user_path(@workbook_item.workbook.user_id) %>
    <i class="fas fa-chevron-right"></i>
    <%= link_to @workbook_item.name, workbook_path(@workbook_item.workbook) %>
    <i class="fas fa-chevron-right"></i>
    <i class="far fa-edit"><%= @workbook_item.name %>の問題作成</i>
  </div>
</div>
<div class="row justify-content-center my-2">
  <%= link_to "前の画面に戻る", workbook_item_choose_quizzes_path(@workbook_item), class: "btn btn-secondary col-5 my-2" %>
</div>
<div class="row">
  <h2 class="mx-auto"><%= @workbook_item.name %>の問題を作成します</h2>
</div>
<%= form_with model: [@workbook_item, @quiz], local: true do |f| %>
<%= render 'layouts/errors', obj: f.object %>
<div class="row justify-content-center my-2">
  <%= f.hidden_field :workbook_item_id, value: @workbook_item.id %>
  <%= f.label :quiz, "問題" %>
</div>
<div class="row justify-content-center my-2">
  <%= f.text_area :quiz, rows: 5, class: "form-control col-10" %>
</div>
<div class="row justify-content-center my-2">
  <%= f.label :judge, "正誤判定" %>
</div>
<div class="row justify-content-center my-2">
  <div class="col-sm-10 btn-group" data-toggle="buttons">
    <label class="btn btn-outline-primary active">
      <%= f.radio_button :judge, :〇, checked: true %><%= f.label :judge, "〇" %>
    </label>
    <label class="btn btn-outline-danger">
      <%= f.radio_button :judge, :× %><%= f.label :judge, "×" %>
    </label>
  </div>
</div>
<div class="row justify-content-center my-2">
  <%= f.label :explanation, "解説" %>
</div>
<div class="row justify-content-center my-2">
  <%= f.text_area :explanation, rows: 5, class: "form-control col-10" %>
</div>
<div class="row justify-content-center my-2">
  <%= f.submit "問題を追加する", class: "btn btn-info col-10 my-2" %>
</div>
<% end %>